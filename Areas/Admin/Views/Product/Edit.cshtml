@model ProductBike

@{
	ViewData["Title"] = "Edit Product";
}

<div class="container">
	<div class="card form-floating shadow">
		<div class="card-header bg-dark text-light">
			<div class="col-12 text-center">
				<h1>Edit Product</h1>
			</div>
		</div>

		<div class="card-body">
			<form method="post">
				<div class="border p-3">
					<input asp-for="Id" hidden/>
					<div class="col-12 p-3">
						<label asp-for="Manufacturer"></label>
						<input asp-for="Manufacturer" class="form-control" />
						<span asp-validation-for="Manufacturer" class="text-danger"></span>
					</div>
					<div class="col-12 p-3">
						<label asp-for="Name"></label>
						<input asp-for="Name" class="form-control" />
						<span asp-validation-for="Name" class="text-danger"></span>
					</div>
					<div class="row p-3">
						<div class="col-4">
							<label asp-for="Version"></label>
							<input asp-for="Version" class="form-control" />
						</div>
						<div class="col-4">
							<label asp-for="Year"></label>
							<input asp-for="Year" class="form-control" />
						</div>
						<div class="col-4">
							<label asp-for="CategoryId"></label>
							<select asp-for="CategoryId" asp-items="ViewBag.CategoryList" class="form-select">
								<option disabled selected>---Select Category---</option>
							</select>
							<span asp-validation-for="CategoryId"></span>
						</div>
					</div>
					<div class="col-12 p-3">
						<label asp-for="Price"></label>
						<input asp-for="Price" class="form-control" />
					</div>
					<div class="col-12 p-3">
						<label asp-for="Description"></label>
						<textarea type="text" asp-for="Description" class="form-control"></textarea>
					</div>
				</div>
				<div class="row mt-2">
					<div class="col-6">
						<button type="submit" class="btn btn-outline-primary form-control shadow-sm rounded">
							<i class="bi bi-pencil-square"></i> Update
						</button>
					</div>
					<div class="col-6">
						<a asp-controller="Product" asp-action="Index" class="btn btn-outline-secondary form-control shadow-sm rounded">
							<i class="bi bi-x-circle-fill"></i> Close
						</a>
					</div>
				</div>
			</form>
		</div>
	</div>
</div>

@section Scripts {
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}


