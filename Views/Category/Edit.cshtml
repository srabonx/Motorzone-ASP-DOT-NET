@model Category

<title>Edit Category</title>

<form method="post" class="border p-3 border-dark-subtle">
	<div class="container-fluid border-black">
		<div class="row pb-2 text-center">
			<h1>Edit Category</h1>
		</div>
		<input asp-for="Id" hidden />
		<div class="mb-3 row p-1">
			<label asp-for="Name" class="p-0"></label>
			<input asp-for="Name" class="form-control bg-primary text-white" />
			<span asp-validation-for="Name" class="text-danger"></span>
		</div>
		<div class="mb-3 row p-1">
			<label asp-for="DisplayOrder" class="p-0"></label>
			<input asp-for="DisplayOrder" class="form-control bg-primary text-white" />
			<span asp-validation-for="DisplayOrder" class="text-danger"></span>
		</div>
		<div class="mb-3 row">
			<div class="col-6 col-md-3">
				<button type="submit" class="btn btn-primary form-control">Update</button>
			</div>
			<div class="col-6 col-md-3">
				<a asp-controller="Category" asp-action="Index" class="btn btn-outline-primary form-control">Close</a>
			</div>
		</div>
	</div>
</form>


@section Scripts {
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}
